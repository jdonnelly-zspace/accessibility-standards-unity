{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Example export configuration for accessibility audit reports. Copy this file to export-config.json and update with your credentials.",
  "version": "1.0.0",

  "pdf": {
    "companyName": "Your Organization Name",
    "logo": null,
    "footerText": "Accessibility Audit Report - Generated by accessibility-standards-unity",
    "headerText": null,
    "pageSize": "Letter",
    "orientation": "portrait",
    "includeTOC": true,
    "customCSS": null,
    "margins": {
      "top": "0.75in",
      "right": "0.75in",
      "bottom": "0.75in",
      "left": "0.75in"
    }
  },

  "csv": {
    "columns": [
      "id",
      "scene",
      "severity",
      "wcagCriterion",
      "category",
      "title",
      "description",
      "recommendation",
      "impact",
      "affectedUsers",
      "status",
      "assignedTo",
      "dueDate",
      "scriptPath",
      "lineNumber"
    ],
    "includeHeaders": true,
    "delimiter": ",",
    "encoding": "utf8",
    "bom": true
  },

  "github": {
    "token": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "owner": "your-github-username",
    "repo": "your-repository-name",
    "defaultAssignee": "your-github-username",
    "defaultLabels": [
      "accessibility",
      "a11y",
      "bug"
    ],
    "issueTemplate": {
      "titlePrefix": "[A11Y]",
      "includeWCAGLinks": true,
      "includeTechnicalDetails": true,
      "autoLabel": true
    }
  },

  "jira": {
    "serverUrl": "https://your-company.atlassian.net",
    "email": "your-email@company.com",
    "apiToken": "ATATT3xFfGF0xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "projectKey": "PROJ",
    "issueType": "Bug",
    "defaultAssignee": "jira-username",
    "customFields": {},
    "priorityMapping": {
      "Critical": "Highest",
      "High": "High",
      "Medium": "Medium",
      "Low": "Low"
    },
    "labels": [
      "accessibility",
      "a11y"
    ]
  },

  "reporting": {
    "defaultFormats": [
      "markdown",
      "pdf"
    ],
    "outputDirectory": "AccessibilityAudit",
    "generateTimestamps": true,
    "archiveOldReports": true,
    "archiveDirectory": "AccessibilityAudit/archive"
  },

  "notifications": {
    "enabled": false,
    "slack": {
      "webhookUrl": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
      "channel": "#accessibility",
      "username": "Accessibility Bot",
      "notifyOnCritical": true,
      "notifyOnComplete": true
    },
    "email": {
      "enabled": false,
      "smtp": {
        "host": "smtp.gmail.com",
        "port": 587,
        "secure": false,
        "auth": {
          "user": "your-email@company.com",
          "pass": "your-email-password"
        }
      },
      "recipients": [
        "team@company.com"
      ],
      "subject": "Accessibility Audit Report - {{PROJECT_NAME}}"
    }
  },

  "templates": {
    "default": "templates/audit/VPAT-COMPREHENSIVE.template.md",
    "custom": {
      "executive": "templates/audit/custom/executive-summary.template.md",
      "technical": "templates/audit/custom/technical-details.template.md",
      "stakeholder": "templates/audit/custom/stakeholder-friendly.template.md"
    }
  },

  "thresholds": {
    "minComplianceScore": 80,
    "maxCriticalIssues": 0,
    "maxHighIssues": 5,
    "failOnRegression": true,
    "requireManualReview": [
      "1.2.1",
      "1.2.2",
      "1.2.3",
      "1.4.2",
      "2.2.2",
      "2.3.1",
      "3.1.1"
    ]
  },

  "ci": {
    "enabled": false,
    "failOnCritical": true,
    "failOnRegression": true,
    "compareBaseline": true,
    "baselinePath": "compliance-history/baseline.json",
    "generateArtifacts": true,
    "artifactsPath": "artifacts/accessibility",
    "commentOnPR": true
  }
}
