{
  "description": "Required npm packages for accessibility implementation",
  "note": "Add these to your project's package.json devDependencies",

  "development": {
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "@eslint/js": "^9.36.0",
    "globals": "^16.4.0"
  },

  "testing": {
    "@playwright/test": "^1.55.1",
    "@axe-core/playwright": "^4.10.2",
    "vitest": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "jsdom": "^27.0.0"
  },

  "runtime": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5"
  },

  "optional": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "note": "FontAwesome requires proper aria-labels on icon-only buttons"
  },

  "installation": {
    "development_install": "npm install --save-dev eslint eslint-plugin-jsx-a11y @eslint/js globals",
    "testing_install": "npm install --save-dev @playwright/test @axe-core/playwright vitest @testing-library/react @testing-library/jest-dom",
    "runtime_install": "npm install react react-dom react-helmet-async"
  }
}
